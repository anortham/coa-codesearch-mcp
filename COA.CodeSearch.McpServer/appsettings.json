{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "COA.CodeSearch": "Debug"
    }
  },
  "McpServer": {
    "MaxWorkspaces": 5,
    "WorkspaceTimeout": "00:30:00",
    "EnableDiagnostics": true,
    "ParallelismDegree": 4,
    "CacheSettings": {
      "MaxCachedWorkspaces": 5,
      "WorkspaceEvictionTime": "00:30:00",
      "EnableTextSearchCache": true
    }
  },
  "ResponseLimits": {
    "MaxTokens": 20000,
    "SafetyMargin": 0.8,
    "DefaultMaxResults": 50,
    "EnableTruncation": true,
    "EnablePagination": true,
    "EnableTokenUsageLogging": true,
    "ToolSpecificLimits": {
      "BatchOperationsTool": 25000
    },
    "ToolSpecificResultLimits": {
      "TextSearchTool": 50,
      "FileSearchTool": 50,
      "BatchOperationsTool": 100
    }
  },
  "Lucene": {
    "StuckLockTimeoutMinutes": 15,
    "MaintenanceIntervalMinutes": 30,
    "EnablePeriodicMaintenance": true,
    "SupportedExtensions": [
      // .NET & Microsoft
      ".cs", ".vb", ".fs", ".csproj", ".vbproj", ".fsproj", ".sln", ".config", ".resx", ".xaml", ".razor", ".cshtml", ".vbhtml",
      // Web Technologies  
      ".html", ".htm", ".css", ".scss", ".sass", ".less", ".js", ".ts", ".jsx", ".tsx", ".vue", ".svelte", ".php", ".asp", ".aspx",
      // Data & Configuration
      ".json", ".xml", ".yaml", ".yml", ".toml", ".ini", ".cfg", ".conf", ".properties", ".env", ".editorconfig",
      // Documentation & Text
      ".md", ".txt", ".rst", ".adoc", ".tex", ".rtf", ".log", ".readme", ".changelog", ".license", ".authors",
      // Programming Languages
      ".py", ".pyi", ".pyx", ".go", ".rs", ".java", ".kt", ".kts", ".scala", ".clj", ".cljs", ".rb", ".php", ".pl", ".pm",
      ".cpp", ".cc", ".cxx", ".c", ".h", ".hpp", ".hh", ".hxx", ".m", ".mm", ".swift", ".dart", ".lua", ".r", ".jl",
      // Functional & ML
      ".hs", ".lhs", ".elm", ".ml", ".mli", ".fs", ".fsi", ".fsx", ".clj", ".cljs", ".cljc", ".edn",
      // Shell & Scripts
      ".sh", ".bash", ".zsh", ".fish", ".ps1", ".psm1", ".bat", ".cmd", ".awk", ".sed",
      // Database & Query
      ".sql", ".psql", ".mysql", ".sqlite", ".cypher", ".sparql", ".hql", ".plsql",
      // Build & CI/CD
      ".dockerfile", ".containerfile", ".makefile", ".cmake", ".gradle", ".maven", ".ant", ".sbt", ".cabal", ".stack",
      // Templates & DSL
      ".j2", ".jinja", ".mustache", ".handlebars", ".liquid", ".erb", ".haml", ".slim", ".pug", ".jade",
      // Special Purpose
      ".graphql", ".gql", ".proto", ".thrift", ".avro", ".pem", ".crt", ".key", ".cer",
      // Config files (no extension)
      "dockerfile", "makefile", "rakefile", "gemfile", "pipfile", "poetry.lock", "cargo.lock", "package-lock.json"
    ],
    "ExcludePatterns": [
      "bin", "obj", "node_modules", ".git", ".vs", "packages", "TestResults", ".codesearch"
    ],
    "ExcludedDirectories": [
      "bin", "obj", "node_modules", ".git", ".vs", "packages", "TestResults", ".codesearch"
    ],
    "IndexSettings": {
      "MaxFieldLength": 1000000,
      "RAMBufferSizeMB": 256,
      "MaxBufferedDocs": 1000,
      "CommitInterval": "00:01:00"
    }
  },
  "ClaudeMemory": {
    "BasePath": ".codesearch",
    "ProjectMemoryPath": "project-memory",
    "LocalMemoryPath": "local-memory",
    "MaxSearchResults": 50,
    "TemporaryNoteRetentionDays": 7,
    "MinConfidenceLevel": 50,
    "EnableAutoSummary": true,
    "EnablePatternDetection": true,
    "HooksSettings": {
      "EnableAutoContext": true,
      "EnableSessionTracking": true,
      "EnablePatternSuggestions": true
    }
  },
  "FileWatcher": {
    "Enabled": true,
    "DebounceMilliseconds": 500,
    "BatchSize": 50,
    "ExcludePatterns": [
      "bin", "obj", "node_modules", ".git", ".vs", "packages", "TestResults", ".codesearch"
    ]
  },
  "WorkspaceAutoIndex": {
    "Enabled": true,
    "StartupDelayMilliseconds": 6000
  },
  "MemoryLifecycle": {
    "Enabled": true,
    "AutoResolveThreshold": 0.8,
    "PendingResolutionThreshold": 0.5,
    "CheckIntervalHours": 24,
    "StaleAfterDays": 30,
    "ArchiveAfterDays": 90,
    "ConfidenceWeights": {
      "MemoryTypeWeight": 0.25,
      "FileRelevanceWeight": 0.20,
      "ChangeTypeWeight": 0.15,
      "AgeWeight": 0.15,
      "StatusWeight": 0.15,
      "ContentAnalysisWeight": 0.10
    }
  }
}