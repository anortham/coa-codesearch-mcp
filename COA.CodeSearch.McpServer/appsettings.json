{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "COA.CodeSearch": "Debug"
    }
  },
  "McpServer": {
    "MaxWorkspaces": 5,
    "WorkspaceTimeout": "00:30:00",
    "EnableDiagnostics": true,
    "ParallelismDegree": 4,
    "CacheSettings": {
      "MaxCachedWorkspaces": 5,
      "WorkspaceEvictionTime": "00:30:00",
      "EnableSemanticModelCache": true
    }
  },
  "ResponseLimits": {
    "MaxTokens": 20000,
    "SafetyMargin": 0.8,
    "DefaultMaxResults": 50,
    "EnableTruncation": true,
    "EnablePagination": true,
    "EnableTokenUsageLogging": true,
    "ToolSpecificLimits": {
      "RenameSymbolTool": 15000,
      "ProjectStructureAnalysisTool": 10000,
      "BatchOperationsTool": 25000
    },
    "ToolSpecificResultLimits": {
      "FindReferencesTool": 100,
      "SearchSymbolsTool": 100,
      "FastTextSearchTool": 50,
      "ProjectStructureAnalysisTool": 20
    }
  },
  "Lucene": {
    "StuckLockTimeoutMinutes": 15,
    "MaintenanceIntervalMinutes": 30,
    "EnablePeriodicMaintenance": true,
    "SupportedExtensions": [
      ".cs", ".razor", ".cshtml", ".json", ".xml", ".md", ".txt", 
      ".js", ".ts", ".jsx", ".tsx", ".vue", ".css", ".scss", ".html", 
      ".yml", ".yaml", ".csproj", ".sln", ".d.ts"
    ],
    "ExcludePatterns": [
      "bin", "obj", "node_modules", ".git", ".vs", "packages", "TestResults", ".codesearch"
    ],
    "ExcludedDirectories": [
      "bin", "obj", "node_modules", ".git", ".vs", "packages", "TestResults", ".codesearch"
    ],
    "IndexSettings": {
      "MaxFieldLength": 1000000,
      "RAMBufferSizeMB": 256,
      "MaxBufferedDocs": 1000,
      "CommitInterval": "00:01:00"
    }
  },
  "ClaudeMemory": {
    "BasePath": ".codesearch",
    "ProjectMemoryPath": "project-memory",
    "LocalMemoryPath": "local-memory",
    "MaxSearchResults": 50,
    "TemporaryNoteRetentionDays": 7,
    "MinConfidenceLevel": 50,
    "EnableAutoSummary": true,
    "EnablePatternDetection": true,
    "HooksSettings": {
      "EnableAutoContext": true,
      "EnableSessionTracking": true,
      "EnablePatternSuggestions": true
    }
  },
  "TypeScript": {
    "ServerPath": null,
    "EnableSemanticAnalysis": true,
    "MaxProjectsOpen": 10,
    "RequestTimeout": "00:00:30",
    "SkipInitialization": false
  },
  "FileWatcher": {
    "Enabled": true,
    "DebounceMilliseconds": 500,
    "BatchSize": 50,
    "ExcludePatterns": [
      "bin", "obj", "node_modules", ".git", ".vs", "packages", "TestResults", ".codesearch"
    ]
  },
  "WorkspaceAutoIndex": {
    "Enabled": true,
    "StartupDelayMilliseconds": 6000
  },
  "MemoryLifecycle": {
    "Enabled": true,
    "AutoResolveThreshold": 0.8,
    "PendingResolutionThreshold": 0.5,
    "CheckIntervalHours": 24,
    "StaleAfterDays": 30,
    "ArchiveAfterDays": 90,
    "ConfidenceWeights": {
      "MemoryTypeWeight": 0.25,
      "FileRelevanceWeight": 0.20,
      "ChangeTypeWeight": 0.15,
      "AgeWeight": 0.15,
      "StatusWeight": 0.15,
      "ContentAnalysisWeight": 0.10
    }
  },
  "FileLogging": {
    "Enabled": true,
    "LogLevel": "Debug",
    "RetainedFileCount": 10,
    "FileSizeLimitBytes": 52428800,
    "RollingInterval": "Hour"
  }
}