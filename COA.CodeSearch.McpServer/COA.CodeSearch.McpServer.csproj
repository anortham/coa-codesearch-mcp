<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    
    <!-- Dotnet Tool Configuration -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>coa-codesearch-mcp</ToolCommandName>
    <PackageId>COA.CodeSearch.McpServer</PackageId>
    <!-- Auto-incrementing version for local development -->
    <!-- Major.Minor set manually, Build auto-increments based on date, Revision is time -->
    <VersionMajor>1</VersionMajor>
    <VersionMinor>5</VersionMinor>
    <!-- Build = days since 2024-01-01 + hour * 100 (max 2400) -->
    <!-- Revision = minute * 100 + second (max 5999) -->
    <VersionBuild>$([MSBuild]::Subtract($([System.DateTime]::Now.DayOfYear), 1))</VersionBuild>
    <VersionRevision>$([MSBuild]::Add($([MSBuild]::Multiply($([System.DateTime]::Now.Hour), 100)), $([MSBuild]::Add($([MSBuild]::Multiply($([System.DateTime]::Now.Minute), 10)), $([MSBuild]::Divide($([System.DateTime]::Now.Second), 6))))))</VersionRevision>
    <Version>$(VersionMajor).$(VersionMinor).$(VersionBuild).$(VersionRevision)</Version>
    <AssemblyVersion>$(VersionMajor).$(VersionMinor).0.0</AssemblyVersion>
    <FileVersion>$(Version)</FileVersion>
    <!-- Add build metadata -->
    <InformationalVersion>$(Version)+local.$(BuildHash)</InformationalVersion>
    <Authors>Children of America</Authors>
    <Company>Children of America</Company>
    <Description>High-performance MCP server for code search and navigation across multiple languages</Description>
    <PackageTags>mcp;codesearch;csharp;blazor;code-navigation;lsp;lucene</PackageTags>
    <RepositoryUrl>https://childrensal.visualstudio.com/COA%20Roslyn%20MCP/_git/COA%20Roslyn%20MCP</RepositoryUrl>
    <PackageProjectUrl>https://childrensal.visualstudio.com/COA%20Roslyn%20MCP/_git/COA%20Roslyn%20MCP</PackageProjectUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <!-- Hosting and DI -->
    <PackageReference Include="Lucene.Net" Version="4.8.0-beta00017" />
    <PackageReference Include="Lucene.Net.Analysis.Common" Version="4.8.0-beta00017" />
    <PackageReference Include="Lucene.Net.QueryParser" Version="4.8.0-beta00017" />
    <PackageReference Include="Lucene.Net.Highlighter" Version="4.8.0-beta00017" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.0" />
    
    <!-- Roslyn for code analysis -->
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.11.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.Workspaces.MSBuild" Version="4.11.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.11.0" />
    <PackageReference Include="Microsoft.Build.Locator" Version="1.7.8" />
    
    <!-- SQLite dependencies -->
    <PackageReference Include="SQLitePCLRaw.bundle_e_sqlite3" Version="2.1.10" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="9.0.0" />
    <PackageReference Include="Humanizer.Core" Version="2.14.1" />
    
    <!-- Logging -->
    <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="9.0.0" />
    <PackageReference Include="Serilog" Version="4.2.0" />
    <PackageReference Include="Serilog.Extensions.Logging" Version="9.0.0" />
    <PackageReference Include="Serilog.Sinks.File" Version="6.0.0" />
    
    <!-- Configuration -->
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="9.0.0" />
    
    <!-- Caching -->
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="9.0.0" />
    
    <!-- HTTP Client for TypeScript installer -->
    <PackageReference Include="Microsoft.Extensions.Http" Version="9.0.0" />
  </ItemGroup>

  <!-- Auto-increment version properties -->
  <PropertyGroup>
    <!-- Get current timestamp for build metadata -->
    <BuildTimestamp>$([System.DateTime]::UtcNow.ToString("yyyyMMdd.HHmmss"))</BuildTimestamp>
  </PropertyGroup>

  <!-- Get Git commit hash if available -->
  <Target Name="GetGitHash" BeforeTargets="GetAssemblyVersion;GenerateAssemblyInfo">
    <PropertyGroup>
      <GitHash Condition="'$(GitHash)' == ''">unknown</GitHash>
    </PropertyGroup>
    <Exec Command="git rev-parse --short=8 HEAD" 
          ConsoleToMSBuild="true" 
          ContinueOnError="true" 
          Condition="'$(GitHash)' == 'unknown'">
      <Output TaskParameter="ConsoleOutput" PropertyName="GitHash" />
    </Exec>
    <PropertyGroup>
      <GitHash Condition="'$(GitHash)' == ''">unknown</GitHash>
      <BuildHash>$(GitHash).$(BuildTimestamp)</BuildHash>
      <!-- Update InformationalVersion with actual build hash -->
      <InformationalVersion>$(Version)+local.$(BuildHash)</InformationalVersion>
    </PropertyGroup>
  </Target>

  <!-- Add build date as assembly metadata -->
  <Target Name="AddBuildMetadata" BeforeTargets="GetAssemblyVersion;GenerateAssemblyInfo">
    <PropertyGroup>
      <BuildDateUtc>$([System.DateTime]::UtcNow.ToString("yyyy-MM-dd HH:mm:ss UTC"))</BuildDateUtc>
    </PropertyGroup>
    <ItemGroup>
      <AssemblyMetadata Include="BuildDate" Value="$(BuildDateUtc)" />
      <AssemblyMetadata Include="GitCommit" Value="$(GitHash)" />
      <AssemblyMetadata Include="BuildMachine" Value="$(COMPUTERNAME)" />
    </ItemGroup>
  </Target>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="package.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\COA.Mcp.Protocol\COA.Mcp.Protocol.csproj" />
  </ItemGroup>

</Project>
